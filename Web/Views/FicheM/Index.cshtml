@model IEnumerable<Domain.fichemetier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_test.cshtml";

}

<h2>Espace  RH</h2>
@using (Html.BeginForm())
{<table>
        <tr>
            <td>
                <div>
                    Search : @Html.TextBox("filtre")

                </div>
            </td>
            <td>          <input type="submit" value="Search" id="submit" />  </td>
        </tr>
    </table>}

<p>
    @Html.ActionLink("New Fiche Metier", "Create")
</p>

<div class="col-lg-6 col-md-12">
    <div class="card">
        <div class="card-header card-header-tabs card-header-primary">
            <i class="fa fa-file"></i><h3>Fiches Metiers</h3>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active show" id="profile">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                   Employer
                                </td>
                                <td>
                                    Job
                                </td>
                                <td>
                                    Description
                                </td>
                                <td>
                                    Competence Family
                                </td>
                                <td>
                                    Actions
                                </td>
                            </tr>
                            @foreach (var item in Model)
                             {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employee1.U_FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nom_f)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => item.description_f)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.F_Famille_Competence)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id_f }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id_f }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id_f }) |
                                    @Html.ActionLink("Compétences", "Show", new { id = item.id_f })
                                </td>
                               
                            </tr>
                             }
                            </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
</div>
